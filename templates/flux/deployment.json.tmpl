              "nodeSelectorTerms": [
                {
                  "matchExpressions": [
                    {
                      "key": "kubernetes.io/role",
                      "operator": "In",
                      "values": [
                        "infrastructure"
                      ]
                    }
                  ]
                }
              ]
            }
          }
        },
				"containers": [
					{
						"name": "memcached",
            "image": "${memcached_image}",
						"imagePullPolicy": "IfNotPresent",
						"args": [
							"-m 512",
							"-p 11211",
							"-I 5m"
						],
						"ports": [
