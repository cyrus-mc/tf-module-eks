apiVersion: apiextensions.k8s.io/v1beta1
kind: CustomResourceDefinition
metadata:
  name: helmreleases.flux.weave.works
spec:
  group: flux.weave.works
  names:
    kind: HelmRelease
    listKind: HelmReleaseList
    plural: helmreleases
    shortNames:
    - hr
  scope: Namespaced
  subresources:
    status: {}
  version: v1beta1
  versions:
    - name: v1beta1
      served: true
      storage: true
  validation:
    openAPIV3Schema:
      properties:
        spec:
          required: ['chart']
          properties:
            releaseName:
              type: string
              pattern: "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
            timeout:
              type: integer
              format: int64
            resetValues:
              type: boolean
            forceUpgrade:
              type: boolean
            rollback:
              type: object
              properties:
                enable:
                  type: boolean
                force:
                  type: boolean
                recreate:
                  type: boolean
                disableHooks:
                  type: boolean
                timeout:
                  type: int64
                wait:
                  type: boolean
            valueFileSecrets:
              type: array
              items:
                type: object
                required: ['name']
                properties:
                  name:
                    type: string
            valuesFrom:
              type: array
              items:
                type: object
                properties:
                  configMapKeyRef:
                    type: object
                    required: ['name']
                    properties:
                      name:
                        type: string
                      key:
                        type: string
                      optional:
                        type: boolean
                  secretKeyRef:
                    type: object
                    required: ['name']
                    properties:
                      name:
                        type: string
                      key:
                        type: string
                      optional:
                        type: boolean
                  externalSourceRef:
                    type: object
                    required: ['url']
                    properties:
                      url:
                        type: string
                      optional:
                        type: boolean
                  chartFileRef:
                    type: object
                    required: ['path']
                    properties:
                      path:
                        type: string
                      optional:
                        type: boolean
                oneOf:
                - required: ['configMapKeyRef']
                - required: ['secretKeyRef']
                - required: ['externalSourceRef']
                - required: ['chartFileRef']
            values:
              type: object
            chart:
              oneOf:
              - required: ['git', 'path']
                properties:
                  git:
                    type: string
                    format: git # not defined by OAS
                  path:
                    type: string
                  ref:
                    type: string
                  skipDepUpdate:
                    type: boolean
              - required: ['repository', 'name', 'version']
                properties:
                  repository:
                    type: string
                    format: url # not defined by OAS
                  name:
                    type: string
                  version:
                    type: string
                    format: semver # not defined by OAS
                  chartPullSecret:
                    properties:
                      name:
                        type: string

---

apiVersion: v1
kind: Namespace
metadata:
  name: flux

---

apiVersion: v1
kind: ServiceAccount
metadata:
  labels:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: operator
  name: flux
  namespace: flux

---

apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  labels:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: operator
  name: flux
rules:
  - apiGroups:
      - '*'
    resources:
      - '*'
    verbs:
      - '*'
  - nonResourceURLs:
      - '*'
    verbs:
      - '*'

---

apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  labels:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: operator
  name: flux
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: flux
subjects:
  - name: flux
    namespace: "flux"
    kind: ServiceAccount

---

apiVersion: v1
kind: Secret
metadata:
  labels:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: operator
  name: flux-git-deploy
  namespace: flux
type: Opaque

---

apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: operator
  name: flux-kube-config
  namespace: flux
data:
  config: |
    apiVersion: v1
    clusters: []
    contexts:
    - context:
        cluster: ""
        namespace: default
        user: ""
      name: default
    current-context: default
    kind: Config
    preferences: {}
    users: []

---

apiVersion: v1
kind: Service
metadata:
  labels:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: operator
  name: flux
  namespace: flux
spec:
  type: ClusterIP
  ports:
    - port: 3030
      targetPort: http
      protocol: TCP
      name: http
  selector:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: operator

---

apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kubernetes.io/name: flux
    app.kubernetes.io/instance: operator
  name: flux
  namespace: flux
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: flux
      app.kubernetes.io/instance: operator
  template:
    metadata:
      labels:
        app.kubernetes.io/name: flux
        app.kubernetes.io/instance: operator
    spec:
      serviceAccountName: flux
      volumes:
      - name: kubedir
        configMap:
          name: flux-kube-config
      - name: git-key
        secret:
          secretName: flux-git-deploy
          defaultMode: 0400
      - name: git-keygen
        emptyDir:
          medium: Memory
      containers:
        - name: flux
          image: "docker.io/weaveworks/flux:1.12.1"
          imagePullPolicy: IfNotPresent
          ports:
          - name: http
            containerPort: 3030
            protocol: TCP
          volumeMounts:
          - name: kubedir
            mountPath: /root/.kubectl
          - name: git-key
            mountPath: /etc/fluxd/ssh
            readOnly: true
          - name: git-keygen
            mountPath: /var/fluxd/keygen
          env:
          - name: KUBECONFIG
            value: /root/.kubectl/config
          args:
          - --ssh-keygen-dir=/var/fluxd/keygen
          - --k8s-secret-name=flux-git-deploy
          - --memcached-hostname=flux-memcached
          - --memcached-service=
          - --git-url=${git_url}
          - --git-branch=master
          - --git-path=
          - --git-user=Weave Flux
          - --git-email=support@weave.works
          - --git-set-author=false
          - --git-poll-interval=5m
          - --git-timeout=20s
          - --sync-interval=5m
          - --git-ci-skip=false
          - --registry-poll-interval=5m
          - --registry-rps=200
          - --registry-burst=125
          - --registry-trace=false
          resources:
            requests:
              cpu: 50m
              memory: 64Mi

---

apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kubernetes.io/name: flux
    app.kubernetes.io/instance: helm-operator
  name: flux-helm-operator
  namespace: flux
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: flux
      app.kubernetes.io/instance: helm-operator
  template:
    metadata:
      annotations:
      labels:
        app.kubernetes.io/name: flux
        app.kubernetes.io/instance: helm-operator
    spec:
      serviceAccountName: flux
      volumes:
      - name: git-key
        secret:
          secretName: flux-git-deploy
          defaultMode: 0400
      containers:
      - name: flux-helm-operator
        image: "docker.io/weaveworks/helm-operator:0.8.0"
        imagePullPolicy: IfNotPresent
        ports:
        - name: http
          containerPort: 3030
        volumeMounts:
        - name: git-key
          mountPath: /etc/fluxd/ssh
          readOnly: true
        args:
        - --git-timeout=20s
        - --git-poll-interval=5m
        - --charts-sync-interval=3m
        - --update-chart-deps=true
        - --log-release-diffs=false
        - --tiller-namespace=kube-system
        resources:
          requests:
            cpu: 50m
            memory: 64Mi

---

apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: memcached
  name: flux-memcached
  namespace: flux
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app.kuberentes.io/name: flux
      app.kubernetes.io/instance: memcached
  template:
    metadata:
      labels:
        app.kuberentes.io/name: flux
        app.kubernetes.io/instance: memcached
    spec:
      containers:
      - name: memcached
        image: memcached:1.4.25
        imagePullPolicy: IfNotPresent
        args:
        - -m 512    # Maximum memory to use, in megabytes. 64MB is default.
        - -p 11211    # Default port, but being explicit is nice.
        - -I 5m #  Maximum size for one item
        ports:
        - name: memcached
          containerPort: 11211
        resources:
          {}

---

apiVersion: v1
kind: Service
metadata:
  labels:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: memcached
  name: flux-memcached
  namespace: flux
spec:
  ports:
    - port: 11211
      targetPort: memcached
      protocol: TCP
      name: memcached
  selector:
    app.kuberentes.io/name: flux
    app.kubernetes.io/instance: memcached
